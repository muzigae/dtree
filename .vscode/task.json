{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "cargo build",
            "type": "shell",
            "command": "cargo build"
        },
        {
            "label": "cargo run",
            "type": "shell",
            "command": "cargo run"
        },
        {
            "label": "cargo test",
            "type": "shell",
            "command": "cargo test"
        },
        {
            "label": "cargo clippy",
            "type": "shell",
            "command": "cargo clippy --all-targets --all-features -- -D warnings"
        },
        {
            "label": "cargo fmt",
            "type": "shell",
            "command": "cargo fmt"
        },
        {
            "label": "run release",
            "type": "shell",
            "command": "cargo run --release"
        }
    ]
}